right:
    dec x -> dec HARD_X (inc HARD_Y)
left:
    inc x -> inc HARD_X (dec HARD_Y)
up:
    dec y -> dec HARD_Y (inc SCREEN_Y)
down:
    inc y -> inc HARD_Y (dec SCREEN_Y)
