JOY !zone {
    inc SLOWDOWN
    lda SLOWDOWN
    cmp #2
    beq +
    rts
+
    lda #0
    sta SLOWDOWN
    lda CIA1_PORT_2
.up
    lsr 
    bcs .down
    pha
    jsr SCROLL_U
    pla
.down
    lsr
    bcs .left
    pha
    jsr SCROLL_D
    pla
.left
    lsr
    bcs .right
    pha
    jsr SCROLL_L
    pla
.right
    lsr
    bcs .fire
    pha
    jsr SCROLL_R
    pla
.fire
    lsr
    bcs +
    inc SCREEN
+
    rts
}

SLOWDOWN 
!by 0
