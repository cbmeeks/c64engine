; 
; zero page: $0000 - $00ff
;

RAM_ROM_SWITCH      = $01
TMP_SPR_X_MSB       = $02
TMP_CONTROL_Y       = $03
SORT_I              = $04
SORT_J              = $05
SORT_I_NUM          = $06
SORT_J_NUM          = $07
TMP_J               = $08

SPR_I               = $10; - $1f  sprite y-coord
SPR_Y               = $20; - $2f  sprite y-coord

;
; CPU stack: $0100 - $01ff
;

CPU_STACK           = $0100

;
;  sprite multiplexer
;

SPR_X               = $0700; - $070f  sprite x-coord
SPR_A               = $0710; - $071f  sprite color A
SPR_B               = $0720; - $072f  sprite color B
SPR_F               = $0730; - $073f  sprite frame pointer
SPR_E               = $0740; - $074f  sprite expand x/y

; 
; CPU stack: $0100 - $01ff
;

CPU_STACK   = $0100; - $01ff

; 
; VIC area
; 

VIC_BANK        = $4000; - $7fff
HIRES           = $4000; - $5fff
SPR_FR          = $6000; - $7bff -> 112 sprite frames
SCREEN          = $7c00; - $7fff
SPR_PTR         = SCREEN + $0400 - 8
